project hammer/core 
       :
        requirements <library>/boost/ptr_container
                     <library>/boost/function_types
 ;

lib hammer_core 
   : 
    hammer_parser
    hammer_lexer
    [ glob ../src/*.cpp ]
    [ glob ../src/*.h ]
    [ glob ../src/project_generators/msvc/*.cpp ]
    [ glob ../src/project_generators/msvc/*.h ]
    ../src/build/hammer_walker.c
    /libantlr3c
    /boost/ptr_container
    /boost/filesystem
    /boost/guid
    /boost/regex
    /boost/assign
    /boost/process
  :
    <include>../src/
    <link>static
  ;

obj hammer_parser : ../src/build/hammerParser.c /libantlr3c : <cflags>/TP ;
obj hammer_lexer : ../src/build/hammerLexer.c /libantlr3c : <cflags>/TP ;
explicit hammer_parser ;
explicit hammer_lexer ;
