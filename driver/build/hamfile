local
lib version
   : sources =
      [ htmpl ../src/version.cpp.htmpl ]
   : requirements =
      <include>../src
      <link>static
   ;

exe hammer
   : sources =
      [ glob ../src/*.cpp ]
      [ glob ../src/*.h ]
      version
      ^hammer/core
      /boost/program_options
      /boost/filesystem
      /boost/format
      /boost/regex
   : requirements =
      (<target-os>linux && <variant>debug -> <name>dhammer)
      (<target-os>windows && <variant>debug -> <name>dhammer.exe)
   ;
