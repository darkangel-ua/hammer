                                   <library>/boost/ptr_container/<version>1.34.1 ;

pch stdafx : ../src/stdafx.cpp ../src/stdafx.h ;
explicit stdafx ;

obj parser_and_lexer
   : 
    ../src/build/hammerParser.c 
    ../src/build/hammerLexer.c 
   : 
    <cflags>/TP 
    <use>/libantlr3c/<version>3.1.1 
   ;
explicit parser_and_lexer ;

obj without_pch 
   :
    ../src/dos_wildcard.cpp
    ../src/build/hammer_walker.c
   :
    <use>/boost/regex
    <use>/libantlr3c/<version>3.1.1 
   ;
explicit without_pch ;

lib hammer.core 
   : 
    stdafx
    parser_and_lexer
    without_pch
    [ glob ../src/*.cpp : stdafx.cpp dos_wildcard.cpp ]
    [ rglob ../src/*.h : stdafx.h ]
    [ rglob ../src/project_generators/*.cpp ]
    /libantlr3c/<version>3.1.1
    /boost/function_types
    /boost/filesystem/<version>1.34.1
    /boost/guid
    /boost/regex
    /boost/assign
    /boost/process
    /boost/format
   :
