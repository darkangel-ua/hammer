project qt-hammer : requirements <toolset>gcc:<cxxflags>"--std=c++0x" ;
 
feature.feature all-static : on : propagated composite no-defaults;
feature.compose <all-static>on : <link>static;

lib hammerplugin
  : [ glob ../src/*.cpp ]
    [ glob ../src/*.h ]
    [ qt.uic [ glob ../src/*.ui ] ]
    ../src/hammerproject.qrc
    hammerplugin.moc
    /hammer/core/<all-static>on
    /boost/foreach/<version>1.40.0
    /boost/serialization/<version>1.40.0
    /Qt/QtCreator/<version>2.5
    /Qt//QtGui
  :
    <host-os>windows,<variant>debug:<name>HammerPlugind.dll
    <host-os>windows,<variant>release:<name>HammerPlugin.dll
    <host-os>linux,<variant>debug:<name>libHammerPlugind.so
    <host-os>linux,<variant>release:<name>libHammerPlugin.so
  ;

qt.moc hammerplugin.moc 
   : 
    ../src/hammerplugin.h 
    ../src/hammerprojectmanager.h
    ../src/hammereditorfactory.h
    ../src/hammerproject.h
